{
    "extends": ["eslint:recommended", "eslint-config-prettier"],
    "env": {
        "es2021": true,
        "node": true
    },
    "parserOptions": {
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "jsx": false
        },
        "sourceType": "module"
    },
    "globals": {
        "afterAll": "readonly",
        "afterEach": "readonly",
        "beforeAll": "readonly",
        "beforeEach": "readonly",
        "strapi": "readonly",
        "describe": "readonly",
        "it": "readonly",
        "expect": "readonly",
        "jest": "readonly"
    },
    "rules": {
        "indent": ["warn", 4, { "SwitchCase": 1 }],
        "linebreak-style": ["error", "unix"],
        "quotes": ["warn", "single"],
        "semi": ["error", "always"],
        "no-console": "off",
        "no-unused-vars": "warn"
    }
}
